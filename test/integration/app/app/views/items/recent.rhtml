
<h1>Recent</h1>
<% view_cache :tag => [:seconds] do %>
  <% if @items.any? %>
    <% @items.each do |item| %>
      <h3><%= item.name %></h3>
      <p><%= item.description %></p>
    <% end %>
  <% else  %>
    <h3>Nothing found</h3>
  <% end  %>
<% end %>

<%= render :partial => 'shared/related' %>
